<% if signed_in? %>

    <table class="front" summary="For signed-in users">
        <tr>
          <td class="main">
            <h1 class="micropost">What's up?</h1>
            <%= render 'shared/micropost_form' %>
            <%= render 'shared/feed' %>
          </td>
          <td class="sidebar round">
            <%= render 'shared/user_info' %>
          </td>
        </tr>
    </table>

<% else %>

<h1>Super-duper site!</h1>
<p>Sign in and get nothing to do, except view <a href="http://vkontakte.ru/mshakuznetsov">News</a> and typing boring massages</p>

<%= link_to "Sign up now!", 'signup', :class => "signup_button round" %>

<% end %>